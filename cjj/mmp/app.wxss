/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

page {
  font-size: 28rpx;
}

page,
view {
  box-sizing: border-box;
}

.h1,
.h2,
.h3,
.h4 {
  margin: 10rpx 0;
  font-weight: bold;
  color: #333;
}

.h1 {
  font-size: 2em;
}

.h2 {
  font-size: 1.5em;
}

.h3 {
  font-size: 1.17em;
}

.h4 {
  font-size: 1em;
}

.h5 {
  font-size: 0.83em;
}

.h6 {
  font-size: 0.67em;
}

.list {
  padding: 0 1em;
}

.list-item {
  margin: 20rpx 0;
  padding-left: 1em;
  border-bottom: 1rpx solid #ccc;
}